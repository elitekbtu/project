# ====================================
# RabbitMQ Environment Variables
# ====================================

# Default user credentials
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Default virtual host
RABBITMQ_DEFAULT_VHOST=/

# Node name
RABBITMQ_NODENAME=rabbit@localhost

# Memory and disk limits (configured in rabbitmq.conf)
# RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.4 # Deprecated - configured in rabbitmq.conf
RABBITMQ_MEMORY_HIGH_WATERMARK_TYPE=relative
RABBITMQ_DISK_FREE_LIMIT=2GB

# Clustering
RABBITMQ_USE_LONGNAME=false

# Logging
RABBITMQ_LOG_LEVEL=info
RABBITMQ_LOGS=-

# Ports
RABBITMQ_NODE_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Plugins to enable
RABBITMQ_PLUGINS=rabbitmq_management,rabbitmq_prometheus

# Erlang VM settings
RABBITMQ_IO_THREAD_POOL_SIZE=128
RABBITMQ_SERVER_START_ARGS=-rabbit heartbeat 600

# Security (SSL not used in this setup)
# RABBITMQ_SSL_VERIFY=verify_none # Deprecated - not needed for non-SSL setup
# RABBITMQ_SSL_FAIL_IF_NO_PEER_CERT=false # Deprecated - not needed for non-SSL setup 